<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>Correction du labo</display-name>
    <context-param>
        <description>La chaine du pilote JDBC utilisé pour se connecter à la BD.</description>
        <param-name>piloteJdbc</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <description>L'URL de la BD pour les connexions JDBC.</description>
        <param-name>urlBd</param-name>
        <param-value>jdbc:mysql://localhost/projetcinema?user=root&amp;password=root</param-value>
    </context-param>
    <servlet>
        <servlet-name>controleur</servlet-name>
        <servlet-class>com.cinema.servlets.controler.ControleurFrontal</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>com.cinema.servlets.traitements.Signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.cinema.servlets.traitements.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.cinema.servlets.traitements.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gestion</servlet-name>
        <servlet-class>com.cinema.servlets.traitements.Gestion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjoutCinema</servlet-name>
        <servlet-class>com.cinema.servlets.traitements.AjoutCinema</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MiseAjourProfil</servlet-name>
        <servlet-class>com.cinema.servlets.traitements.MiseAjourProfil</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjoutFilmProjection</servlet-name>
        <servlet-class>com.cinema.servlets.traitements.AjoutFilmProjection</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>requestesAjaxCinema</servlet-name>
        <servlet-class>com.cinema.servlets.traitements.requestesAjaxCinema</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadAffcihes</servlet-name>
        <servlet-class>com.cinema.servlets.traitements.UploadAffiches</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>controleur</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/inscription</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/connexion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/deconnexion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gestion</servlet-name>
        <url-pattern>/gestionnaire</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjoutCinema</servlet-name>
        <url-pattern>/ajoutCinema</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MiseAjourProfil</servlet-name>
        <url-pattern>/modifierProfilGestionnaire</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjoutFilmProjection</servlet-name>
        <url-pattern>/ajoutFilmProjection</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>requestesAjaxCinema</servlet-name>
        <url-pattern>/requestesAjaxCinema</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadAffcihes</servlet-name>
        <url-pattern>/uploaderAffiches</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
